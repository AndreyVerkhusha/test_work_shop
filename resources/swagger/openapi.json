{
    "openapi": "3.0.0",
    "info": {
        "title": "Product and Order API",
        "version": "1.0.0",
        "description": "API для управления продуктами и заказами."
    },
    "tags": [
        {
            "name": "Products",
            "description": "Операции с продуктами"
        },
        {
            "name": "Orders",
            "description": "Операции с заказами"
        }
    ],
    "paths": {
        "/products": {
            "get": {
                "tags": ["Products"],
                "summary": "Получить список продуктов",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Номер страницы для пагинации",
                        "required": false,
                        "schema": { "type": "integer", "default": 1 }
                    },
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Количество элементов на странице",
                        "required": false,
                        "schema": { "type": "integer", "default": 10 }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список продуктов с пагинацией",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": { "$ref": "#/components/schemas/Product" }
                                        },
                                        "current_page": { "type": "integer" },
                                        "per_page": { "type": "integer" },
                                        "total_page": { "type": "integer" },
                                        "total_products": { "type": "integer" }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Products"],
                "summary": "Создать новый продукт",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/ProductCreateRequest" }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Продукт успешно создан",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Product" }
                            }
                        }
                    }
                }
            }
        },
        "/products/{product}": {
            "get": {
                "tags": ["Products"],
                "summary": "Получить информацию о продукте",
                "parameters": [
                    {
                        "name": "product",
                        "in": "path",
                        "required": true,
                        "description": "ID продукта",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Информация о продукте",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "product": { "$ref": "#/components/schemas/Product" },
                                        "categories": {
                                            "type": "array",
                                            "items": { "$ref": "#/components/schemas/Category" }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": ["Products"],
                "summary": "Обновить продукт",
                "parameters": [
                    {
                        "name": "product",
                        "in": "path",
                        "required": true,
                        "description": "ID продукта",
                        "schema": { "type": "integer" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/ProductUpdateRequest" }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Продукт обновлён",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Product" }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["Products"],
                "summary": "Удалить продукт",
                "parameters": [
                    {
                        "name": "product",
                        "in": "path",
                        "required": true,
                        "description": "ID продукта",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Продукт успешно удалён"
                    }
                }
            }
        },
        "/orders": {
            "get": {
                "tags": ["Orders"],
                "summary": "Получить список заказов",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Номер страницы для пагинации",
                        "required": false,
                        "schema": { "type": "integer", "default": 1 }
                    },
                    {
                        "name": "perPage",
                        "in": "query",
                        "description": "Количество элементов на странице",
                        "required": false,
                        "schema": { "type": "integer", "default": 10 }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список заказов с пагинацией",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": { "$ref": "#/components/schemas/Order" }
                                        },
                                        "current_page": { "type": "integer" },
                                        "per_page": { "type": "integer" },
                                        "total_page": { "type": "integer" },
                                        "total_orders": { "type": "integer" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/orders/{order}": {
            "get": {
                "tags": ["Orders"],
                "summary": "Получить информацию о заказе",
                "parameters": [
                    {
                        "name": "order",
                        "in": "path",
                        "required": true,
                        "description": "ID заказа",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Информация о заказе",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Order"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/orders/{order}/complete": {
            "post": {
                "tags": ["Orders"],
                "summary": "Отметить заказ как завершённый",
                "parameters": [
                    {
                        "name": "order",
                        "in": "path",
                        "required": true,
                        "description": "ID заказа",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ отмечен как завершённый",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Order" }
                            }
                        }
                    }
                }
            }
        },
        "/orders/{order}/increment-quantity": {
            "post": {
                "tags": ["Orders"],
                "summary": "Увеличить количество продукта в заказе",
                "parameters": [
                    {
                        "name": "order",
                        "in": "path",
                        "required": true,
                        "description": "ID заказа",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Количество продукта увеличено",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Order" }
                            }
                        }
                    }
                }
            }
        },
        "/orders/{order}/decrement-quantity": {
            "post": {
                "tags": ["Orders"],
                "summary": "Уменьшить количество продукта в заказе",
                "parameters": [
                    {
                        "name": "order",
                        "in": "path",
                        "required": true,
                        "description": "ID заказа",
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Количество продукта уменьшено",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Order" }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "name": { "type": "string", "example": "Продукт 1" },
                    "description": { "type": "string", "example": "Описание продукта" },
                    "price": { "type": "integer", "description": "Цена в копейках", "example": 1999 },
                    "category_id": { "type": "integer", "example": 2 },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                },
                "required": ["id", "name", "price", "category_id"]
            },
            "Category": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 2 },
                    "name": { "type": "string", "example": "Категория 1" }
                },
                "required": ["id", "name"]
            },
            "ProductCreateRequest": {
                "type": "object",
                "properties": {
                    "name": { "type": "string", "example": "Новый продукт" },
                    "description": { "type": "string", "example": "Описание продукта" },
                    "price": { "type": "number", "format": "float", "example": 19.99 },
                    "category_id": { "type": "integer", "example": 2 }
                },
                "required": ["name", "price", "category_id"]
            },
            "ProductUpdateRequest": {
                "type": "object",
                "properties": {
                    "name": { "type": "string", "example": "Обновлённый продукт" },
                    "description": { "type": "string", "example": "Описание продукта" },
                    "price": { "type": "number", "format": "float", "example": 29.99 },
                    "category_id": { "type": "integer", "example": 3 }
                }
            },
            "Order": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 10 },
                    "full_name": { "type": "string", "example": "Иван Иванов" },
                    "status": { "type": "string", "example": "new", "description": "Статус заказа" },
                    "comment": { "type": "string", "nullable": true, "example": "Просьба позвонить перед доставкой" },
                    "product_id": { "type": "integer", "example": 1 },
                    "quantity": { "type": "integer", "example": 2 },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" },
                    "deleted_at": { "type": "string", "format": "date-time", "nullable": true }
                },
                "required": ["id", "full_name", "status", "product_id", "quantity"]
            }
        }
    }
}
